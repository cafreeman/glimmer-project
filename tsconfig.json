{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "build",
    "moduleResolution": "Node",
    "rootDirs": [
      "./src",
      "./node_modules/glimmer-engine/dist/node_modules/glimmer"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "packages/*",
        "node_modules/glimmer-engine/packages/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}