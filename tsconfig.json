{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "moduleResolution": "Node",
    "lib": [
      "es2015",
      "dom"
    ],
    "rootDirs": [
      "./src",
      "./node_modules/glimmer-engine/packages"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "packages/*",
        "node_modules/glimmer-engine/packages/*"
      ]
    },
    "exclude": [
      "node_modules"
    ]
  }
}